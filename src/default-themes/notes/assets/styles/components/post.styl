.post-detail

  .post
    padding: 24px 32px

    .post-title
      font-size: 32px
      text-align: center
      padding: 24px

    .post-info
      text-align: center
      font-size: 12px
      padding-bottom: 24px

      .post-time
        color: $dark-gray

      .post-tag
        padding: 8px 16px

    .post-content
      img
        display: block
        box-shadow: 0 0 30px #eee
        max-width: 94%
        border-radius: 2px
        margin: 24px auto

      p
        line-height: 1.725
        margin-bottom: 24px

        code
          padding: 0 3px
          margin: 0 2px
          background: rgba(195,195,195,0.41)
          font-size: 0.9em
          border-radius: 2px

      pre
        margin-bottom: 24px

        code
          font-size: 14px
          font-family: 'Source Code Pro', Consolas, Menlo, Monaco, 'Courier New', monospace
          padding: 1em
          border-radius: 5px
          line-height: 1.375

.next-post
  text-align: center
  padding: 24px 32px
  .next
    margin-bottom: 24px
  .post-title
    font-size: 18px

